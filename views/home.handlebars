<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3">Get the latest articles</h1>
  </div>
</div>

<div class="new-articles">
		{{#if article}}
      {{#each article}}
			<div class="card">
  				<h5 class="card-header">{{this.title}}</h5>
  				<div class="card-body">
    				<p class="card-text">{{this.summary}}</p>
            <a href={{this.link}}></a>
    				<a href="#" class="btn btn-primary">Save this article</a>
				</div>
			</div>
      {{/each}}
		{{else}}
			<h4 class="text-center">Hit the scrap button to populate articles.</h4>
		{{/if}}
</div>